{
  "name": "fullstackopen-cicd",
  "version": "1.0.0",
  "description": "Full Stack Open",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "start-prod": "serve -s dist",
    "test": "jest",
    "lint": "eslint './**/*.{js,jsx}'",
    "format": "prettier --write .",
    "build": "webpack --mode production",
    "test:e2e": "playwright test --config=playwright.config.js",
    "check-env": "node -e \"console.log('Node: ' + process.version + '\\nEnvironment: ' + process.env.NODE_ENV)\"",
    "pretest:e2e": "npm run build",
    "debug:e2e": "cross-env DEBUG=pw:api,pw:browser* npm run test:e2e",
    "verify-build": "node -e \"const fs=require('fs'); console.log('Build directory exists:', fs.existsSync('./build')); console.log('Bundle exists:', fs.existsSync('./build/bundle.js'))\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlyio/fullstackopen-cicd.git"
  },
  "keywords": [
    "fullstack-open"
  ],
  "author": "Smartly.io",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smartlyio/fullstackopen-cicd/issues"
  },
  "homepage": "https://github.com/smartlyio/fullstackopen-cicd#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/eslint-parser": "^7.27.0",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react": "^7.37.5",
    "history": "^5.3.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "serve": "^14.2.4",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "axios": "^1.6.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "e2e-tests"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
